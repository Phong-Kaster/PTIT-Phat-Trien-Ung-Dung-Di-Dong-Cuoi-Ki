<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="button_style">
        <item name="android:layout_width">247dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/button_style_state</item>
        <item name="android:textColor">@drawable/button_text_color_style_state</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_view_color_theme_style">
        <item name="android:textColor">@color/colorThemeText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="text_view_color_normal_style">
        <item name="android:textColor">@color/colorNormalText</item>
    </style>




    <style name="background_color_launch_screen">
        <item name="android:background">#1DAB87</item>
    </style>

    <style name="custom_input">
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:drawablePadding">20dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="custom_picker">
        <item name="android:background">@drawable/custom_input</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:selectionDividerHeight" tools:targetApi="q">0dp</item>
        <item name="colorControlNormal">@color/transparent</item>
        <item name="android:layout_height">70sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>

    </style>

    <style name="dashboard_image_button_style">
        <item name="android:layout_marginTop">10sp</item>
        <item name="android:layout_width">40sp</item>
        <item name="android:layout_height">40sp</item>
        <item name="android:layout_marginStart">50dp</item>
        <item name="android:background">@color/colorSupportBackground</item>
    </style>

    <style name="dashboard_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:textColor">@color/colorNormalText</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">10sp</item>
    </style>

    <style name="income_expense_layout_style">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">180dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="income_expense_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textColor">@color/colorAlternativeText</item>
    </style>

    <style name="text_view_label">
        <item name="android:textColor">#6B7280</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginBottom">5dp</item>
    </style>

    <style name="text_view_header">
        <item name="android:textColor">@color/colorTheme</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="card_fragment_button_style">
        <item name="android:layout_width">300dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/button_style_state</item>
        <item name="android:textColor">@drawable/button_text_color_style_state</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginStart">35dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:layout_marginBottom">28dp</item>
    </style>

    <style name="radio_style_tab">
        <item name="android:textColor">@drawable/custom_radio_text</item>
        <item name="android:background">@drawable/custom_radio</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="transaction_information_text_view_content">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">5sp</item>
        <item name="android:textColor">@color/colorNormalText</item>
    </style>

    <style name="transaction_information_text_view_title">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingStart">20sp</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorTheme</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="transaction_information_button_style">
        <item name="android:layout_height">50dp</item>
        <item name="android:layout_width">300dp</item>
        <item name="android:textColor">@drawable/button_text_color_style_state</item>
        <item name="android:background">@drawable/button_style_state</item>
        <item name="android:layout_marginStart">55dp</item>
        <item name="android:layout_marginEnd">55dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="preview_statement_text_view_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">20sp</item>
        <item name="android:textColor">@color/colorNormalText</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>