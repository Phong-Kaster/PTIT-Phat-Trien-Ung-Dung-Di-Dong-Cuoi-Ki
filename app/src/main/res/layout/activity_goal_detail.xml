<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical"
    tools:context=".Activities.General.DepositActivity"
    android:padding="20dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_marginBottom="50dp">

        <ImageButton
            android:id="@+id/Btn_back_detail"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/back_btn_background"
            android:src="@drawable/chevron_left"/>

        <TextView
            android:id="@+id/goal_topTitle"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/goal_name"
            android:textStyle="bold"
            android:layout_marginEnd="40dp"
            android:textSize="22sp"
            android:textColor="@color/colorButtomNavigationMenuPressed"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/goal_name_tv"
                style="@style/text_view_label"/>
            <TextView
                android:id="@+id/goal_name_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/goal_name"
                style="@style/text_view_label"
                android:textColor="@color/colorShortcut"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goal_target_tv"
                    android:layout_marginTop="16dp"
                    style="@style/text_view_label"/>


                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goal_balance_tv"
                    android:layout_marginTop="16dp"
                    style="@style/text_view_label"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/goal_amount_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goal_amount"
                    style="@style/text_view_label"
                    android:textColor="@color/colorShortcut"
                    />


                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <TextView
                    android:id="@+id/goal_balance_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/goal_balance"
                    style="@style/text_view_label"
                    android:textColor="@color/colorShortcut"
                    />
            </LinearLayout>

            <ProgressBar
                android:layout_marginTop="5dp"
                android:id="@+id/progressBar_detail"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/goal_deposit_tv"
                android:layout_marginTop="16dp"
                style="@style/text_view_label"/>
            <TextView
                android:id="@+id/goal_deposit_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/goal_amount"
                style="@style/text_view_label"
                android:textColor="@color/colorShortcut"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/goal_deadline_tv"
                android:layout_marginTop="16dp"
                style="@style/text_view_label"/>
            <TextView
                android:id="@+id/goal_deadline_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/goal_deadline"
                style="@style/text_view_label"
                android:textColor="@color/colorShortcut"
                />

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <LinearLayout
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="bottom">
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_edit_detail"
                style="@style/button_style"
                android:layout_gravity="center"
                android:text="@string/goal_edit"
                android:layout_marginVertical="10dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_deposit_detail"
                style="@style/button_style"
                android:layout_gravity="center"
                android:text="@string/goal_deposit"
                android:layout_marginVertical="10dp"/>
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_export_detail"
                style="@style/button_style"
                android:layout_gravity="center"
                android:text="@string/goal_export"
                android:layout_marginVertical="10dp"/>
        </LinearLayout>


    </LinearLayout>

</LinearLayout>